
@{
    ViewData["Title"] = "Index";

    var dsLoai = new string[] { "dien-thoai", "may-tinh-bang", "laptop" };
    var dsSanPham = new string[] { "sam-sung", "sony", "toshiba" };
}

<h1>Index</h1>

@foreach (var loai in dsLoai)
{
    <div>
        @foreach (var sp in dsSanPham)
        {
        <a href="/@loai/@sp">@sp : @loai</a><br />
        }
    </div>
}
